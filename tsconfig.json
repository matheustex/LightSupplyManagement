{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["./src/app/controller/*"],
      "@service/*": ["./src/app/service/*"],
      "@utils/*":["./src/app/utils/*"],
      "@model/*": ["./src/app/model/*"]
    },
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "include": [
    "./**/*.ts",
    "src/app/service/department"
, "webpack.config.js", "webpack.config.js"  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}